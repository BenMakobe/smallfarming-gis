CREATE TABLE buildings (id SERIAL NOT NULL PRIMARY KEY,
  name TEXT UNIQUE NOT NULL,
  image TEXT NULL,
  notes TEXT NULL,
  height_m REAL,
  last_update TIMESTAMP DEFAULT now() NOT NULL,
  last_update_by TEXT NOT NULL,
  uuid TEXT UNIQUE NOT NULL,
  sketch TEXT NULL,
  full_image_path TEXT NULL,
  full_sketch_path TEXT NULL
);

ALTER TABLE buildings
ADD fid SERIAL NOT NULL;


COMMENT ON TABLE buildings IS 
'This is a table for buildings.';

