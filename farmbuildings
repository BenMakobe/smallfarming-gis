CREATE TABLE wall_type_lookup_fid (fid SERIAL NOT NULL,
  wall_type_lookup_name TEXT NULL,
  wall_type_lookup_colour TEXT NULL,
  wall_type_lookup_uuid TEXT UNIQUE NOT NULL
);


ALTER TABLE wall_type_lookup_fid
ADD wall_type_lookup_fid SERIAL NOT NULL;

COMMENT ON TABLE wall_type_lookup_fid IS 
'This is a lookup table for wall types i.e name, colour, etc.';

CREATE INDEX wall_type_lookup_uuid ON buildings(uuid)
